/* pages/article/article.wxss */

.content {
  text-align: center;
  color: #fff;
}
.top-bar{
  background: #fff;
  display: flex;
  border-bottom: 1px solid #5f4440;
}
.bar-item{
  flex: 1;
  padding: 12rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  border-radius: 0;
  background: transparent;
}

.bar-item:nth-child(2){
  border-right: 1px solid #5f4440;
  border-left: 1px solid #5f4440;
}
.bar-item.active{
  color: #ff2d06;
}
.bar-item image{
  width: 45rpx;
  height: 45rpx;
  margin: 0 12rpx;
}
/* user */
.title {
    padding: 24rpx;
    text-align: justify;
    text-align-last: left;
    border-bottom: 1px solid #5f4440;
}
/* share */
.share-btn{
  margin: 32rpx;
  display: flex;
  justify-content: space-between;
}
.share-item{
  display: flex;
  align-items: center;
  justify-content: center;
  background: #3ac210;
  color: #fff;
  border-radius: 50rpx;
  padding: 0 24rpx;
}
.share-item:nth-child(1){
  background: #ff9907;
}
.share-item image {
    width: 58rpx;
    height: 58rpx;
    margin: 12rpx;
}
.bar-item,.share-item{
  font-size: 38rpx;
}
.bar-item::before,.bar-item::after,.share-item::before,.share-item::after{
  border-radius: 0;
}
/* user */
.user{
  text-align: center;
}
.user-thumb {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}
.user-time{
  color: #a9a9a9;
  font-size: 24rpx;
}
/* recommend */
.r-title{
  text-align: center;
  color: #3ac210;
  font-size: 44rpx;
  margin-bottom: 24rpx;
}
.r-item{
  display: flex;
  justify-content: space-around;
  align-items: top;
  margin: 0 12rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
  border-bottom: 1px solid #bfbfbf;
}
.r-item text{
  flex: 1;
  display: block;
  line-height: 60rpx;
  margin-right: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.r-thumb{
  width: 320rpx;
  height: 180rpx;
}
/* return top home */
.returnTop{
  margin: 0 40rpx 40rpx;
  line-height: 88rpx;
  border-radius: 50rpx;
  background: #3ac210;
  text-align: center;
  color: #fff;
}
/* music style */
.music {
  display: block;
  position: fixed;
  top: 220rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.5);
  padding: 20rpx;
  animation: musicRotate 2s infinite linear;
}
@keyframes musicRotate{
  0% {
    transform: rotate(0);
  }
  100% {
    transform: rotate(360deg);
  }
} 
/*  line  */
.line{
  width: 750rpx;
  margin: 24rpx 0;
}