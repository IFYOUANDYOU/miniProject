/*=============================顶部===============================*/

.index {
    width: 100%;
    box-sizing: border-box;
    font-size: 48rpx;
    font-weight: bold;
    padding-bottom: 100rpx;
    background: #fafafa;
    padding-top:20rpx; 
}

.index-content {
    padding: 0 20rpx;
}

/*=============================底部===============================*/

.index-footer {
    background: #fff;
    z-index: 2;
    position: fixed;
    width: 100%;
    bottom: 0;
    height: 98rpx;
    line-height: 98rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.index-tab {
    display: flex;
    justify-content: center;
    align-items: center;
}

.index-footer-btn {
    display: flex;
    justify-content: center;
    align-items: center;
}

.index-footer-btn image {
    width: 50rpx;
    height: 50rpx;
    margin-right: 20rpx;
}

.index-footer-btn {
    text-align: center;
    width: 50%;
}

.red {
    color: #ff2d06;
}

.index-footer text {
    width: 1rpx;
    height: 50rpx;
    border-left: 1px solid #c1adaa;
}

/*=============================列表===============================*/

.index-list {
    width: 100%;
    height: 399rpx;
    position: relative;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
    overflow: hidden;
    box-sizing: border-box;
    border: 1px solid #eee;
}

.index-list image {
    width: 100%;
    height: 399rpx;
    position: absolute;
}

.index-list-text {
    width: 100%;
    position: absolute;
    bottom: 0;
    padding: 10rpx;
    box-sizing: border-box;
    text-align: justify;
    text-align-last: left;
    background: linear-gradient(rgba(255, 255, 255, 0.09), rgb(51, 51, 51));
    color: #fff;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.back-top{
    position: fixed;
    bottom: 125rpx;
    z-index: 99;
    background: rgba(0, 0, 0, 0.5);
    right:25rpx;
    width:140rpx;
    border-radius: 70rpx;
    height:140rpx;
    text-align: center;
    align-items: center;
    justify-content: center;
    display: flex;
}
.back-top image{
    width:60rpx;
    height:96rpx;
}
