/* pages/big_img/big_img.wxss */

page{
  width: 100%;
  height: 100%;
}
.big_img{
  width: 100%;
}

.btn{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 44rpx;
}
button{
  width: 320rpx;
  height: 100rpx;
  background: RGBA(135, 182, 129, 1);
  border-radius: 160rpx;
  line-height: 100rpx;
  color: RGBA(255, 255, 255, 1);
  font-size: 42rpx;
  padding: 0;
  margin: 0;
  margin-right:48rpx; 
}
button::after{
  border: none;
} 
.friends{
  width: 320rpx;
  height: 100rpx;
  background: RGBA(255, 120, 145, 1);
  line-height: 100rpx;
  text-align: center;
  border-radius: 160rpx;
  color: RGBA(255, 255, 255, 1);
  font-size: 42rpx;
}




/*蒙层  */
.share_friends{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  position: absolute;
  top: 0;
  left: 0;
  
}
.obox{
  width: 600rpx;
   box-sizing: border-box; 
  padding: 50rpx 68rpx;
  border-radius: 34rpx;
  background: RGBA(255, 255, 255, 1);
   position: absolute;
    top: 163rpx;
    left: 0;
    right: 0;

  margin: auto; 
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

  font-size: 43rpx;
  color: RGBA(41, 41, 41, 1);
}

.share_img{
  width: 100%;
  margin: 42rpx 0;
}


.share_txt{
  font-size: 36rpx;
  color: RGBA(136, 136, 136, 1);
}




.should_share{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  background: rgba(0, 0, 0, 0.3)
}
.my_center{
  width: 600rpx;
  height: 400rpx;
  margin-top: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background: white;
  border-radius: 20rpx;
}
.add_txt{
  font-size: 30rpx;

}

.share_add{
  color: RGBA(172, 172, 172, 1);
