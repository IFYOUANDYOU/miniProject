.container{
  width: 100%;
  height: 100%;
}

swiper{
  width: 100%;
  height: 520rpx;
}
swiper-item{
  width: 100%;
  height: 100%;
  position: relative;
}

.banner_bg{
  width: 100%;
  height: 100%;
}
.item_box{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.banner_name{
  font-size: 46rpx;
  color: #1E1E1E;
  margin-top: 28rpx;
}
.banner_title{
  font-size: 30rpx;
  color: #BBBBBB;
  margin: 26rpx 0;
}
.banner_img{
  width: 215rpx;
}
/*分类列表  */
.type_list{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  padding:28rpx 24rpx; 
}

.type_item{
  width: 230rpx;
  height: 258rpx;
  border-radius: 20rpx;
  background: RGBA(251, 236, 217, 1);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* margin-right: 6rpx; */
  margin-bottom: 6rpx;
  font-size: 32rpx;
  color: RGBA(54, 54, 54, 1);
  font-weight: bold;
}

.item_img{
  width: 144rpx;
  height: 144rpx;
}

.item_detail{
  font-size: 22rpx;
  color: RGBA(198, 198, 200, 1);
  font-weight: normal;
  margin: 14rpx 0 15rpx 0;
}
.server{
  width: 296rpx;
  height: 86rpx;
  background: RGBA(255, 120, 145, 1);
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  right: 0;
  bottom: 50rpx;
  font-size: 30rpx;
  color: RGBA(255, 255, 255, 1);
  text-align: center;
  margin: 0;
  padding: 0;
  line-height: normal;
}
button::after{
  border: none;
}

.server_img{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}