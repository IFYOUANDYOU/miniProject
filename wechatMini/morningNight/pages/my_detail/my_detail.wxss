.my_detail_section_2_text{font-size: 30rpx;color: #939293}
.my_detail_section_3{text-align: center;margin-top: 30rpx}
.my_detail_btn_box{width: 100%;display: flex;align-items: center;justify-content: center}
.my_detail_btn{width: 620rpx;font-size: 22wpx;color: #fff;background: rgb(128, 186, 234)}
.my_detail_text{text-align: center;font-size: 22rpx;color: #333;margin-top: 15rpx}
.picker{font-size: 32rpx;color: #333;display: flex;align-items: center;justify-content: center}
.hide{display: none}
.hhx_changed_textarea{margin: 0 auto;width:100%;height: 300rpx;position: absolute;padding: 10rpx 0 0 10rpx}
