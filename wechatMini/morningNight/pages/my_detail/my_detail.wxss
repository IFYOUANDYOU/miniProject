page{width: 100%;height: 100%;background-image: linear-gradient(90deg,rgb(177,253,253), rgb(151,209,255))}
.my_detail{width: 100%;height: 1000rpx;display: flex;justify-content: center;margin: 25rpx 0 60rpx 0}
.my_detail_mid{width: 620rpx;height: 100%;border-radius: 15rpx;background: rgb(255, 255, 255)}
.my_detail_section_1{width:90%;height: 300rpx;border: 1rpx solid rgb(128, 186, 234);border-radius: 15rpx;margin: 0 auto;margin-top: 15rpx;margin-bottom: 15rpx;display: flex;align-items: center;justify-content: center;position: relative}
