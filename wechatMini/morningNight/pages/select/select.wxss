/* pages/select/select.wxss */

page{
  width: 100%;
  background: #F5F6FA;
}
.select_box{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}



swiper{
  margin-top: 40rpx;
  width: 578rpx;
  height: 912rpx;
  box-shadow:0 0 38rpx rgba(116,124,165,0.57) 
}
swiper-item{
  width: 100%;
  height: 100%;
}



.affirm{
  width: 388rpx;
  height: 84rpx;
  background: RGBA(127, 207, 161, 1);
  color: RGBA(255, 255, 255, 1);
  font-size: 40rpx;
  line-height: 85rpx;
  text-align: center;
  border-radius: 42rpx;
  margin-top: 68rpx;
}


.time{
  width: 408rpx;
  height: 106rpx;
  color: RGBA(255, 255, 255, 1);
  position: absolute;
  top:-300rpx;
  left: 0rpx;
  bottom: 0;
  right: 0;
  margin: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.write_img{
  margin-top: 40rpx;
  width: 578rpx;
  height: 912rpx;
  position: relative;
}

.selected_img{
  width: 100%;
  height: 100%;
}
.txt{
  width: 100%;
  height: 200rpx;
  overflow: hidden;
  font-size: 30rpx;
  color: RGBA(97, 92, 92, 1);
  position: absolute;
  top:680rpx;
  left: 0rpx;
  bottom: 0;
  right: 0;
  margin: auto;
  text-align: center;
}


.write{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.checkbox{
  font-size: 38rpx;
  color: #403D3D;
}
checkbox{
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
}
.txt_name{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  width: 702rpx;
  margin-top: 10rpx;
}



input{
  width: 100%;
  font-size: 30rpx;
  color:RGBA(161, 161, 166, 1);
  height: 106rpx;
  background: #FFFFFF;
  margin-top: 24rpx;
  padding-left:22rpx; 
  box-sizing: border-box;
}

textarea{
  width: 702rpx;
  height: 192rpx;
  background: #FFFFFF;
  padding: 22rpx;
  box-sizing: border-box;
  margin-top: 22rpx;
}
checkbox-group{
  width: 100%;
}

.ok{
  width: 388rpx;
  height: 84rpx;
  background: #7FCFA1;
  color: #FFFFFF;
  font-size: 40rpx;
  border-radius: 42rpx;
  line-height: 84rpx;
  text-align: center;
  margin-top:10rpx;
  margin-bottom: 25rpx; 
}