/* pages/sendforge/sendforge.wxss */


page{
  width: 100%;
  height: 100%;
  background: rgba(243,243,243,1);
}

.sendBox{
  width: 100%;
  height: 100%;
}
textarea{
  width: 100%;
  height: 70%;
  box-sizing: border-box;
  padding: 24rpx 40rpx;
  line-height: 40rpx;
}


/* //选择发送方式 */
.check_box{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}
.item_box{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: rgba(110,110,110,1);
  
}
.margin_item{
  margin:0 48rpx;
}
.dot{
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  background:rgba(228,228,228,1); 
  margin-right: 4rpx;
}


.check_dot{
   width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  background:rgba(255,168,0,1); 
  margin-right: 4rpx;
}
button{
  width: 650rpx;
  height: 110rpx;
  margin: 0 auto;
  line-height: 110rpx;
  background: rgba(255,168,0,1);
  color: rgba(255,255,255,1);
  font-family: SimHei;
  font-size: 52rpx;
}