/* pages/sendforge/sendforge.wxss */


page{
  width: 100%;
  height: 100%;
  background: rgba(243,243,243,1);
}

.sendBox{
  width: 100%;
  height: 100%;
}
textarea{
  width: 100%;
  height: 30%;
  box-sizing: border-box;
  padding: 24rpx 40rpx;
  line-height: 40rpx;
}


/*选择图片  */
.choose_img{
  width: 100%;
  box-sizing: border-box;
  padding:0 28rpx; 
  margin-bottom: 114rpx;
  font-family: SimHei;
  color: rgba(186,186,186,1);
  font-size: 37rpx; 
}
.img_allbox{
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.img_box{
  width: 340rpx;
  height: 200rpx;
  position: relative;
  margin-top: 20rpx;
}
.choosed_img{
  width: 100%;
  height: 100%
}
.delete_img{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 22rpx;
  right: 22rpx;
}
/* //选择发送方式 */
.check_box{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}
.item_box{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: rgba(110,110,110,1);
  
}
.margin_item{
  margin:0 48rpx;
}
.dot{
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  background:rgba(228,228,228,1); 
  margin-right: 4rpx;
}


.check_dot{
   width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  background:rgba(255,168,0,1); 
  margin-right: 4rpx;
}
button{
  width: 650rpx;
  height: 110rpx;
  margin: 0 auto;
  line-height: 110rpx;
  background: rgba(255,168,0,1);
  color: rgba(255,255,255,1);
  font-family: SimHei;
  font-size: 52rpx;
  margin-bottom: 100rpx;
}