/* pages/detail/detail.wxss */

@import"/template/home.wxss";



/*标签样式  */
.mjs_label{
  width: 700rpx;
  height: 44rpx;
  margin: 0 auto;
  margin-top: 15rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.item_label{
  height: 100%;
  text-align: center;
  line-height: 25rpx;
  background: rgba(255,222,157,1);
  margin-right: 20rpx;
  font-size: 28rpx;
  color: rgba(79,79,79,1);
  font-family: "Adobe Heiti Std R";
}

/*关注图标  */
.careIcon{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  position: absolute;
  top: 90rpx;
  left: 94rpx;
}
.careImg{
  width: 100%;
  height: 100%;
}




/*评论列表  */
.comment{
  width: 100%;
  box-sizing: border-box;
  padding: 38rpx 25rpx 200rpx 26rpx;
}
.txt{
  font-family: SimHei;
  font-size: 29rpx;
  color: rgba(195,195,195,1);
}
.top_comment_1{
 width: 100%;
 height: 110rpx;
 margin-top: 30rpx;
 display: flex;
 justify-content: space-between;
  align-items:flex-start;  
}
.userinfo_time{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 110rpx;
  font-family: SimHei;
  color: rgba(173,173,173,1);
  font-size: 24rpx;
}
.oname{
  width: 200rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 10rpx;
  color: rgba(77,77,77,1);
  font-size: 32rpx;
}
.headimg{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.name_time{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* align-items: center; */
  margin-left: 20rpx;
}
.icons{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: rgba(195,195,195,1);
}
.icon_img{
  width: 36rpx;
  height: 36rpx;
}

.mar{
  margin-left: 50rpx;
  margin-right: 10rpx;
}
.marg{
  margin-right: 10rpx;
}


/*发布  */
.my_comment{
  width: 100%;
  height: 124rpx;
  background: #fff;
  border-top: 1rpx solid rgba(227,226,226,1);
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-family: SimHei;
  font-size: 36rpx;
  color: rgba(134,134,134,1);
}

.send_type{
  width: 60rpx;
  height: 60rpx;
}

input{
