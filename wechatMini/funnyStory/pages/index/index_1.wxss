page{
  height: 100%;
}


.mjs_topbar{

  height: 80rpx;
  border-bottom:1rpx solid rgba(243,243,243,1);
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  background: #fff;
}
.mjs_toplist{
  height: 78rpx;
  line-height: 78rpx;
  display: inline-block;
  margin: 0 38rpx;
  font-size:  34rpx;
  color: rgba(180,180,180,1);
  font-family: SimHei;
}
.topborder{
  border-bottom: 2rpx solid rgba(255,168,0,1);
}


/* 轮播样式 */
swiper{
  width: 100%;
  height: 90%;
  margin-top: 10rpx;
}
swiper-item{
  overflow: hidden;
}
scroll-view{
  height: 100%;
}
.server{
  position: fixed;
  top: 80%;
  right: 20rpx;
  width:74rpx;
  height:110rpx;
}
button{
  background: none;
  padding: 0;
  margin: 0;
  line-height: normal;


}
button::after{
  border: none;
}
