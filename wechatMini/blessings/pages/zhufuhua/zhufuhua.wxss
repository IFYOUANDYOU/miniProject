.your .content .box .your-list .heade-img image{
	width: 120rpx;
	height: 120rpx;
	display: block;
	margin: 0 auto;
	margin-top: 10rpx;
}
.your .content .box .your-list .heade-cur image{
  	width: 120rpx;
	height: 120rpx;
	display: block;
	margin: 0 auto;
	margin-top: 10rpx;
}
.your .content .box .your-list .tittle{
	text-align: center;
	font-size: 36rpx;
	color: #aaaaaa;
	margin-top: 20rpx;
}
