.doctor-item{margin: 24rpx 32rpx;border-radius: 12rpx;}

.pouple{display: flex;justify-content: center;align-items: center;z-index: 9;transform: scale(0);opacity: 0;}
.innerbox{background: #fff;padding: 42rpx;border-radius: 12rpx;text-align: center;width: 65%;line-height: 44rpx;position: relative;}
.innerbox .close{position: absolute;top: 24rpx;right: 24rpx;}
.innerbox .close::before{display: block;font-family: "iconfont";content: "\e646";font-size: 52rpx;}
.innerbox .avatar{width: 168rpx;height: 168rpx;border-radius: 168rpx;margin-bottom: 12rpx;}
.innerbox .name{font-size: 32rpx;}
.innerbox .intro{text-align: left;margin: 24rpx 0;}
.innerbox .contact{width: 220rpx;line-height: 60rpx;border: 2rpx solid #e1e1e1;background: #f0f0f0;border-radius: 50rpx;margin: 0 auto;}