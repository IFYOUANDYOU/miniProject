page{background: #fafafa;}
.container{position: relative;padding: 0;}
.msgSV{position: fixed;top: 30rpx;left: 30rpx;right: 30rpx;bottom: 100rpx;width: auto;overflow: hidden;padding-bottom: 20rpx;}

.chat-item{margin: 20rpx 0;position: relative;padding: 20rpx;}
.chat-item .time{line-height: 32rpx;text-align: center;margin-bottom: 40rpx;font-size: 24rpx;}
.chat-item .time text{background: #3072f2;color: #fff;padding: 0 18rpx 2rpx;border-radius: 30rpx;}
.chat-item .portrait{width: 68rpx;height: 68rpx;border-radius: 68rpx;position: absolute;top: 74rpx;}
.chat-item.from .portrait{left: 0;}
.chat-item.to .portrait{right: 0;}
.chat-item .content{width: 72%;margin: 0 auto;}
.chat-item.to .content{text-align: right;}
.chat-item .con{padding: 12rpx 20rpx;background: #fff;box-shadow: 0 5rpx 12rpx 5rpx rgba(0, 0, 0, 0.1);border-radius: 12rpx;word-wrap:break-word;white-space:normal;word-break:break-all;display: inline-block;text-align: left;}
.chat-item .link{color: #3081f2;padding: 12rpx 20rpx;}
.chat-item .go{border-bottom: 1px solid #3081f2;line-height: 24rpx;}
.chat-item .thumbnail{display: block;width: 320rpx;max-height: 640rpx;}

.input-box{position: fixed;bottom: 0;left: 0;right: 0;padding: 12rpx 24rpx;background: #fff;border-top: 2rpx solid #e1e1e1;line-height: 68rpx;}
.input-box .text{background: #f0f0f0;border-radius: 100rpx;padding: 0 24rpx;}
.input-box .content{min-height: 68rpx;line-height: 68rpx;}
.input-box .sendImg{flex-shrink: 0;width: 94rpx;height: 68rpx;font-size: 28rpx;background: transparent;padding: 0;margin: 0;box-shadow: none;border: none;float: left;}
.input-box .sendImg::before,.input-box .sendImg::after{display: none;}
.input-box .icon{width: 68rpx;height: 68rpx;}

.scroll-imgs{white-space: nowrap;height: 0;overflow: hidden;}
.scroll-imgs .upimg{padding: 0 12rpx;display: inline-block;margin: 24rpx 0 12rpx;position: relative;}
.scroll-imgs .img{height: 220rpx;width: 180rpx;display: block;}
.scroll-imgs .upimg::before{font-family: "iconfont";position: absolute;top: 0;right: 12rpx;bottom: 0;left: 12rpx;font-size: 36rpx;text-align: right;content: "\e72f";color: #999;line-height: 36rpx;background-image: url(data:image/png;base64,);background-size: 44rpx auto;background-position: right top;background-repeat: no-repeat;}
.scroll-imgs .upimg:hover::before{color: #3072f2;line-height: 44rpx;background-color: rgba(0,  0, 0, 0.4);background-image: url(data:image/png;base64,);}